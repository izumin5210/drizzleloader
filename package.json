{
  "name": "drizzleloader",
  "version": "0.2.1",
  "description": "Generate DataLoaders from Drizzle ORM schema",
  "type": "module",
  "bin": {
    "drizzleloader": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "docs",
    "src",
    "!**/__tests__/**",
    "!**/*.test.ts",
    "!**/*.test.js",
    "!**/*.test.d.ts",
    "!**/*.test.js.map",
    "!**/*.test.d.ts.map",
    "!docs/plans"
  ],
  "keywords": [
    "drizzle",
    "drizzle-orm",
    "dataloader",
    "graphql"
  ],
  "author": "izumin5210 <m@izum.in>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/izumin5210/drizzleloader.git"
  },
  "bugs": {
    "url": "https://github.com/izumin5210/drizzleloader/issues"
  },
  "scripts": {
    "build": "tsc",
    "check": "biome check --write",
    "knip": "knip --fix",
    "test": "vitest --exclude 'src/__tests__/integration/**'",
    "test:integration": "vitest src/__tests__/integration",
    "test:all": "vitest",
    "changeset:version": "changeset version",
    "changeset:release": "pnpm build && changeset publish"
  },
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@types/node": "^25.1.0",
    "@vitest/coverage-v8": "4.0.18",
    "dataloader": "^2.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "knip": "5.82.1",
    "postgres": "^3.4.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "dataloader": "^2.0.0",
    "drizzle-orm": ">=0.30.0"
  },
  "dependencies": {
    "jiti": "^2.6.1"
  }
}
